<div class="new-recipe">
  <h1>New Recipe</h1>

  <%= form_for [@recipe] do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label "Preparation Time (minutes)" %>
      <%= f.number_field :preparation_time %>
    </div>

    <div>
      <%= f.label "Cooking Time (minutes)" %>
      <%= f.number_field :cooking_time %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>

    <div>
      <%= f.submit "Create Recipe" %>
    </div>
  <% end %>
</div>
